{# templates/book/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            {% if book.coverImage %}
                <img src="/{{ book.coverImage }}" class="img-fluid rounded mb-3" alt="Couverture de {{ book.title }}">
            {% else %}
                <div class="bg-light text-muted text-center py-5 rounded">Pas d'image</div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <h1>{{ book.title }}</h1>
            <p class="text-muted">
                Auteur : <strong>{{ book.author }}</strong><br>
                Genre : {{ book.genre }}<br>
                Ajouté le {{ book.createdAt|date('d/m/Y H:i') }}
            </p>

            {% if book.description %}
                <p>{{ book.description|nl2br }}</p>
            {% endif %}

            <div class="mt-3">
                <a href="{{ path('book_index') }}" class="btn btn-secondary">← Retour</a>

                {% if is_granted('BOOK_EDIT', book) %}
                    <a href="{{ path('book_edit', {id: book.id}) }}" class="btn btn-warning">Modifier</a>
                {% endif %}

                {% if is_granted('BOOK_DELETE', book) %}
                    <form method="post" action="{{ path('book_delete', {id: book.id}) }}"
                          class="d-inline"
                          onsubmit="return confirm('Supprimer ce livre ?')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
